.highlight
    margin: 0px
    display: block
    overflow-x: auto
    padding: 0 12px
    font-size: font-size
    font-family: font-mono
    line-height: font-size * line-height
    border: 1px solid #eae0c2
    table
        margin: 0
        width: auto
        td
            border: none
        td.code
            padding: 12px
    .gutter
        border-right: 1px solid #eae0c2
        padding: 12px 0
        pre
            color: #666
            text-align: right
            padding-right: 12px

.article-entry
    .highlight
        margin: 1.6em 0
        @media mq-mobile
            margin: 1.6em -20px
            border-left: none;
            border-right: none;
        .line
            height: 1.6em;

@import "_highlight/" + highlight